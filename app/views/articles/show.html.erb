<div class="text-right">
  <%= link_to article_comments_path(@article), class: 'btn btn-secondary' do %>
    Comments <span class="badge badge-info"><%= @article.comments.size %></span>
  <% end %>
</div>
<p>
  <strong>Name:</strong>
  <%= @article.name %>
</p>

<p>
  <strong>Content:</strong>
  <%= simple_format @article.content %>
</p>

<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>
