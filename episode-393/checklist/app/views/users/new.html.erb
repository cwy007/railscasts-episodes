<div class="row justify-content-center">
  <div class="col-md-6">
    <div class="card border-primary bg-light mt-5">
      <div class="card-body">
        <h1 class="text-center">Sign up</h1>
        <%= simple_form_for @user do |f| %>
          <%= f.input :username %>
          <%= f.input :email %>
          <%= f.input :password %>
          <%= f.input :password_confirmation %>
          <%= f.submit 'Sign up', class: 'btn btn-primary btn-block btn-lg' %>
        <% end %>
        <p>Already signed up? <%= link_to "Log in", login_path %></p>
      </div>
    </div>
  </div>
</div>
